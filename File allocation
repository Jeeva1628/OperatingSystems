#include <stdio.h>

int main() {
    int files[50], start, length, i, j, k;
    for (i = 0; i < 50; i++) files[i] = 0;

    while (1) {
        printf("Enter starting block and length of file: ");
        scanf("%d %d", &start, &length);

        if (start + length > 50) {
            printf("Not enough space.\n");
            continue;
        }

        for (j = start; j < start + length; j++) {
            if (files[j] == 1) {
                printf("Block %d already allocated.\n", j);
                break;
            }
        }

        if (j == start + length) {
            for (k = start; k < start + length; k++) files[k] = 1;
            printf("File allocated from %d to %d\n", start, start + length - 1);
        }

        printf("Enter 1 to continue, 0 to stop: ");
        scanf("%d", &i);
        if (!i) break;
    }
    return 0;
}
