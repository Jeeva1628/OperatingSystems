#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>
#include <string.h>

int main() {
    int fd;
    char writeData[100], readData[100];

    // Create and open a file
    fd = open("example.txt", O_CREAT | O_WRONLY, 0644);
    if (fd < 0) {
        perror("Error creating file");
        return 1;
    }
    printf("Enter data to write into the file: ");
    fgets(writeData, sizeof(writeData), stdin);

    // Write data to the file
    write(fd, writeData, strlen(writeData));
    close(fd);
    printf("Data written to file successfully.\n");

    // Open file for reading
    fd = open("example.txt", O_RDONLY);
    if (fd < 0) {
        perror("Error opening file for reading");
        return 1;
    }

    // Read data from the file
    read(fd, readData, sizeof(readData));
    printf("Data read from file: %s\n", readData);
    close(fd);

    // Delete the file
    if (unlink("example.txt") == 0)
        printf("File deleted successfully.\n");
    else
        perror("Error deleting file");

    return 0;
}
