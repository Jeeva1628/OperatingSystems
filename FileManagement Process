#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <fcntl.h>

int main() {
    int choice, fd;
    char fname[50], buffer[100];

    while (1) {
        printf("\n1. Create File\n2. Write File\n3. Read File\n4. Delete File\n5. Exit\n");
        printf("Enter choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                printf("Enter file name: ");
                scanf("%s", fname);
                fd = open(fname, O_CREAT | O_EXCL, 0644);
                if (fd < 0) perror("File creation failed");
                else printf("File created successfully.\n");
                close(fd);
                break;

            case 2:
                printf("Enter file name: ");
                scanf("%s", fname);
                fd = open(fname, O_WRONLY | O_TRUNC);
                if (fd < 0) { perror("Open failed"); break; }
                printf("Enter text: ");
                scanf(" %[^\n]", buffer);
                write(fd, buffer, sizeof(buffer));
                printf("Data written.\n");
                close(fd);
                break;

            case 3:
                printf("Enter file name: ");
                scanf("%s", fname);
                fd = open(fname, O_RDONLY);
                if (fd < 0) { perror("Open failed"); break; }
                read(fd, buffer, sizeof(buffer));
                printf("File content: %s\n", buffer);
                close(fd);
                break;

            case 4:
                printf("Enter file name: ");
                scanf("%s", fname);
                if (remove(fname) == 0) printf("File deleted.\n");
                else perror("Delete failed");
                break;

            case 5: exit(0);
            default: printf("Invalid choice.\n");
        }
    }
}
