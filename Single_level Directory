#include <stdio.h>
#include <string.h>
#include <stdlib.h>

struct {
    char dname[10], fname[10][10];
    int fcnt;
} dir;

int main() {
    int i, ch;
    char f[30];

    dir.fcnt = 0;
    printf("\nEnter name of directory: ");
    scanf("%s", dir.dname);

    while (1) {
        printf("\n\n1. Create File\n2. Delete File\n3. Search File\n4. Display Files\n5. Exit\nEnter your choice: ");
        scanf("%d", &ch);

        switch (ch) {
            case 1: // Create file
                printf("\nEnter the name of the file: ");
                scanf("%s", f);

                // Check for duplicates
                int exists = 0;
                for (i = 0; i < dir.fcnt; i++) {
                    if (strcmp(f, dir.fname[i]) == 0) {
                        exists = 1;
                        break;
                    }
                }
                if (exists)
                    printf("File %s already exists!\n", f);
                else {
                    strcpy(dir.fname[dir.fcnt], f);
                    dir.fcnt++;
                    printf("File %s created successfully.\n", f);
                }
                break;

            case 2: // Delete file
                printf("\nEnter the name of the file to delete: ");
                scanf("%s", f);
                for (i = 0; i < dir.fcnt; i++) {
                    if (strcmp(f, dir.fname[i]) == 0) {
                        printf("File %s is deleted\n", f);
                        strcpy(dir.fname[i], dir.fname[dir.fcnt - 1]); // Replace with last
                        dir.fcnt--;
                        break;
                    }
                }
                if (i == dir.fcnt)
                    printf("File %s not found\n", f);
                break;

            case 3: // Search file
                printf("\nEnter the name of the file to search: ");
                scanf("%s", f);
                for (i = 0; i < dir.fcnt; i++) {
                    if (strcmp(f, dir.fname[i]) == 0) {
                        printf("File %s is found\n", f);
                        break;
                    }
                }
                if (i == dir.fcnt)
                    printf("File %s not found\n", f);
                break;

            case 4: // Display files
                if (dir.fcnt == 0)
                    printf("\nDirectory is empty\n");
                else {
                    printf("\nThe files are:\n");
                    for (i = 0; i < dir.fcnt; i++)
                        printf("%s\n", dir.fname[i]);
                }
                break;

            case 5:
                exit(0);
        }
    }
}
